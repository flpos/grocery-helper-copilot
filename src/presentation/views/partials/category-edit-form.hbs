<form
  class="category-edit-form"
  hx-put="/categories/{{id}}"
  hx-swap="outerHTML"
>
  <div class="bg-white rounded-lg shadow p-4 mb-3">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Editar Categoria</h3>

    <div class="form-group mb-3">
      <label
        for="category-name-{{id}}"
        class="block text-gray-700 font-semibold mb-2"
      >
        Nome *
      </label>
      <input
        type="text"
        id="category-name-{{id}}"
        name="name"
        value="{{name}}"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        required
      />
    </div>

    <div class="form-group mb-4">
      <label
        for="category-description-{{id}}"
        class="block text-gray-700 font-semibold mb-2"
      >
        Descrição
      </label>
      <textarea
        id="category-description-{{id}}"
        name="description"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        rows="2"
      >{{description}}</textarea>
    </div>

    <div class="flex gap-2">
      <button type="submit" class="btn btn-primary flex-1">
        Salvar
      </button>
      <button
        type="button"
        class="btn btn-secondary flex-1"
        hx-get="/categories/{{id}}"
        hx-swap="outerHTML"
        hx-target="closest form"
      >
        Cancelar
      </button>
    </div>
  </div>
</form>
