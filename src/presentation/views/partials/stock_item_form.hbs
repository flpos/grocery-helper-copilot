<form
  class="stock-item-form"
  hx-post="/stock-items"
  hx-target="#stock-items-list"
  hx-swap="afterbegin"
  hx-on::after-request="if(event.detail.xhr.status === 201) this.reset()"
>
  <div class="bg-white rounded-lg shadow p-4 mb-4">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Adicionar ao Estoque</h2>
    
    <div class="form-group mb-3">
      <label for="stock-item-name" class="block text-gray-700 font-semibold mb-2">
        Nome do Item *
      </label>
      <input
        type="text"
        id="stock-item-name"
        name="name"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        required
      />
    </div>

    <div class="form-group mb-3">
      <label for="stock-item-category" class="block text-gray-700 font-semibold mb-2">
        Categoria *
      </label>
      <select
        id="stock-item-category"
        name="categoryId"
        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        required
      >
        <option value="">Selecione uma categoria</option>
        {{#each categories}}
          <option value="{{ id }}">{{ name }}</option>
        {{/each}}
      </select>
    </div>

    <div class="grid grid-cols-2 gap-3 mb-4">
      <div class="form-group">
        <label for="stock-item-quantity" class="block text-gray-700 font-semibold mb-2">
          Quantidade *
        </label>
        <input
          type="number"
          id="stock-item-quantity"
          name="quantity"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          step="0.01"
          required
        />
      </div>

      <div class="form-group">
        <label for="stock-item-unit" class="block text-gray-700 font-semibold mb-2">
          Unidade *
        </label>
        <select
          id="stock-item-unit"
          name="unit"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        >
          <option value="">Selecione</option>
          <option value="kg">kg</option>
          <option value="g">g</option>
          <option value="l">l</option>
          <option value="ml">ml</option>
          <option value="un">un</option>
          <option value="pct">Pacote</option>
        </select>
      </div>
    </div>

    <button
      type="submit"
      class="btn btn-primary w-full"
    >
      Adicionar ao Estoque
    </button>
  </div>
</form>
